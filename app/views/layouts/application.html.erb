<!DOCTYPE html>
<html>
  <head>
    <title>Dumbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <%= stylesheet_pack_tag 'application' %>
  </head>

  <body>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<div class="navbar navbar-expand-sm navbar-light navbar-dumb">
  <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "https://risibank.fr/cache/stickers/d1932/193283-full.png" %>
      <body>Dumbnb</body>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
          <div class="searchbar">
            <input type="text" placeholder="Search...">
            <div class="search"></div>
          </div>
        </li>
        <li class="nav-item active marge">
          <%= link_to "Devenir con", new_offer_path, class: "nav-link" %>
        </li>
        <% if user_signed_in? %>
        <li class="nav-item dropdown">
            <%= image_tag "https://risibank.fr/cache/stickers/d1570/157043-full.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Sign out",  destroy_user_session_path, method: :validate, class: "dropdown-item" %>
            </div>
        </li>
      <% else %>
        <li class="nav-item">
          <button type="button" class="btn btn-outline-info color">
            <%= link_to "Sign in", new_user_session_path, class: "nav-link" %>
          </button>
        </li>
        <li class="nav-item">
          <button type="button" class="btn btn-outline-info color">
            <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
          </button>
        </li>
      <% end %>
      </li>
    </ul>
  </div>
</div>

    <%= yield %>
  </body>
</html>
